							"mode": "raw",
							"raw": "{\n    \"name\": \"{{random_name}}\",\n    \"email\": \"{{random_email}}\",\n    \"password\": \"TestPassword123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/signin",
							"host": [
								"{{base_url}}"
							],
